<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_oval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ShapeType" />

        <com.shape.ShapeTextView
            android:id="@+id/tv_oval_xml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="XML_OVAL"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_oval_code"
            app:layout_constraintTop_toBottomOf="@id/tv_oval"
            app:normalBackgroundColor="#4897fa"
            app:normalStrokeColor="#ff4141"
            app:normalStrokeWidth="0.5dp"
            app:shapeType="oval" />

        <TextView
            android:id="@+id/tv_oval_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="CODE_OVAL"
            app:layout_constraintBottom_toBottomOf="@id/tv_oval_xml"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_oval_xml"
            app:layout_constraintRight_toRightOf="parent" />

        <com.shape.ShapeTextView
            android:id="@+id/tv_round_xml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="XML_ROUND"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_oval_code"
            app:layout_constraintTop_toBottomOf="@id/tv_oval_xml"
            app:normalStrokeColor="#4897fa"
            app:normalStrokeWidth="0.5dp"
            app:shapeType="round" />

        <Button
            android:id="@+id/tv_round_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="CODE_ROUND"
            app:layout_constraintBottom_toBottomOf="@id/tv_round_xml"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_round_xml"
            app:layout_constraintRight_toRightOf="parent" />

        <com.shape.ShapeTextView
            android:id="@+id/tv_round_rect_xml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="XML_ROUND_RECT"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_round_rect_code"
            app:layout_constraintTop_toBottomOf="@id/tv_round_xml"
            app:normalBackgroundColor="#46b942"
            app:normalStrokeColor="#4897fa"
            app:normalStrokeWidth="0.5dp"
            app:pressedBackgroundColor="#9934c749"
            app:shapeType="round_rect" />

        <TextView
            android:id="@+id/tv_round_rect_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="CODE_ROUND_RECT"
            app:layout_constraintBottom_toBottomOf="@id/tv_round_rect_xml"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_round_rect_xml"
            app:layout_constraintRight_toRightOf="parent" />

        <com.shape.ShapeTextView
            android:id="@+id/tv_segment_xml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="XML_SEGMENT"
            app:direction="right"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_segment_code"
            app:layout_constraintTop_toBottomOf="@id/tv_round_rect_xml"
            app:normalStrokeColor="#f7b218"
            app:normalStrokeWidth="0.5dp"
            app:pressedStrokeColor="#ef163f"
            app:shapeType="segment" />

        <TextView
            android:id="@+id/tv_segment_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="CODE_SEGMENT"
            app:layout_constraintBottom_toBottomOf="@id/tv_segment_xml"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_segment_xml"
            app:layout_constraintRight_toRightOf="parent" />


        <com.shape.ShapeTextView
            android:id="@+id/tv_radius_xml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="XML_RADIUS_10"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_radius_code"
            app:layout_constraintTop_toBottomOf="@id/tv_segment_xml"
            app:normalBackgroundColor="#f7b218"
            app:normalStrokeColor="#ff00ff"
            app:normalStrokeWidth="0.5dp"
            app:pressedStrokeColor="#00ff00"
            app:shapeRadius="10dp" />

        <TextView
            android:id="@+id/tv_radius_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="CODE_RADIUS_10"
            app:layout_constraintBottom_toBottomOf="@id/tv_radius_xml"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_radius_xml"
            app:layout_constraintRight_toRightOf="parent" />

        <com.shape.ShapeTextView
            android:id="@+id/tv_dash_gap_xml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="XML_DASH_GAP"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_dash_gap_code"
            app:layout_constraintTop_toBottomOf="@id/tv_radius_code"
            app:normalStrokeColor="#000000"
            app:normalStrokeWidth="0.5dp"
            app:pressedStrokeColor="#00ffff"
            app:shapeRadius="5dp"
            app:strokeDashGap="5dp"
            app:strokeDashWidth="5dp" />

        <TextView
            android:id="@+id/tv_dash_gap_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="CODE_DASH_GAP"
            app:layout_constraintBottom_toBottomOf="@id/tv_dash_gap_xml"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_dash_gap_xml"
            app:layout_constraintRight_toRightOf="parent" />

        <com.shape.ShapeTextView
            android:id="@+id/tv_all_xml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="XML_ALL"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ll_all_code"
            app:layout_constraintTop_toBottomOf="@id/tv_dash_gap_code"
            app:normalBackgroundColor="#ff4141"
            app:normalStrokeColor="#4897fa"
            app:normalStrokeWidth="2dp"
            app:normalTextColor="#34c749"
            app:pressedBackgroundColor="#4897fa"
            app:pressedStrokeColor="#ff4141"
            app:pressedTextColor="#fdbc40"
            app:shapeRadius="5dp" />

        <LinearLayout
            android:id="@+id/ll_all_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="CODE_ALL"
            app:layout_constraintBottom_toBottomOf="@id/tv_all_xml"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_all_xml"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv_all_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE_ALL" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>